{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "imcanugur/fly-http",
    "type": "library",
    "description": "PSR-18 compliant, middleware-based HTTP client library for enterprise applications",
    "keywords": ["http", "client", "psr-18", "middleware", "enterprise", "guzzle"],
    "license": "MIT",
    "authors": [
        {
            "name": "Can Ugur",
            "email": "imcanugur@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/log": "^3.0",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "psr/http-factory": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Fly\\Http\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fly\\Http\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
